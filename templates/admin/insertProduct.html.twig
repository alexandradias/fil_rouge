{#-> l'instruction 'extends' me permets d'appeler le fichier de base
-> qui se situe dans le dossier baseAdmin de ma section templates
-> ce fichier regroupe le 'header' et le 'footer' présent sur toutes les pages de mon site#}
{% extends 'baseAdmin/base_admin_insert_update_delete.html.twig' %}

    {# ->j'intègre le contenu de ma page entre le 'block' et le 'endblock'#}
     {% block content %}

         <div class="back_content">
             <a href="{{ path('homeAdmin') }}">
                 <img src="{{ asset('assets/icon/back_small.svg') }}" alt="icon back"/>
             </a>
             {#-> j'intègre un titre à ma page#}
             <h1 class="h1">Insert Product</h1>
         </div>
         <hr class="hrTop">
         <hr class="hrTop">


             {#-> la fonction twig 'form_start' démarre le formulaire#}
             {{ form_start(formProductView)}}

                 {#-> je crée une class form qui me permets de styliser le formulaire#}
                 <div class="form">


                    {#-> la fonction twig 'form_label' permet de créer un label#}
                    {# -> la fonction twig 'form_widget' permet de créer un champ de formulaire#}


                    {{ form_label(formProductView.NomPdt, 'Nom', {'label_attr': {'class': 'form_content_label'}}) }}
                    {{ form_widget(formProductView.NomPdt, { 'attr': {'class': "form_content",'placeholder': "Votre nom de produit"} }) }}


                     <hr class="hrInsert">

                     {{ form_label(formProductView.descriptionShortPdt, 'Description courte du produit', {'label_attr': {'class': 'form_content_label'}}) }}
                     {{ form_widget(formProductView.descriptionShortPdt, { 'attr': {'class': "form_content",'placeholder': "Votre description courte du produit"} }) }}

                     <hr class="hrInsert">

                     {{ form_label(formProductView.DescriptionPdt, 'Description du produit', {'label_attr': {'class': 'form_content_label'}}) }}
                     {{ form_widget(formProductView.DescriptionPdt, { 'attr': {'class': "form_content",'placeholder': "Votre description produit"} }) }}

                     <hr class="hrInsert">

                     {{ form_label(formProductView.compositionPdt, 'Composition du produit', {'label_attr': {'class': 'form_content_label'}}) }}
                     {{ form_widget(formProductView.compositionPdt, { 'attr': {'class': "form_content",'placeholder': "Votre composition du produit"} }) }}

                     <hr class="hrInsert">

                     {{ form_label(formProductView.PhotoPdt, 'Votre visuel', {'label_attr': {'class': 'form_content_label'}}) }}
                     {{ form_widget(formProductView.PhotoPdt, { 'attr': {'class': "form_content",'placeholder': "URL de votre image"} }) }}

                     <hr class="hrInsert">

                     {{ form_label(formProductView.image, 'Image', {'label_attr': {'class': 'form_content_label'}}) }}
                     {{ form_widget(formProductView.image, { 'attr': {'class': "form_content",'placeholder': "Votre image"} }) }}

                     <hr class="hrInsert">

                     {{ form_label(formProductView.TarifsHtPdt, 'Tarif HT', {'label_attr': {'class': 'form_content_label'}}) }}
                     {{ form_widget(formProductView.TarifsHtPdt, { 'attr': {'class': "form_content",'placeholder': "Votre tarif HT"} }) }}

                     <hr class="hrInsert">

                     {{ form_label(formProductView.TvaPdt, 'TVA', {'label_attr': {'class': 'form_content_label'}}) }}
                     {{ form_widget(formProductView.TvaPdt, { 'attr': {'class': "form_content",'placeholder': "Montant TVA"} }) }}

                     <hr class="hrInsert">

                     {{ form_label(formProductView.TarifsTtcPdt, 'Tarif TTC', {'label_attr': {'class': 'form_content_label'}}) }}
                     {{ form_widget(formProductView.TarifsTtcPdt, { 'attr': {'class': "form_content",'placeholder': "Votre tarif TTC"} }) }}



                     <hr class="hrInsert">

                     {{ form_widget(formProductView.enregistrer, { 'attr': {'class': "form_content_submit"} }) }}

                 </div>

             {{ form_end(formProductView)}}




     {% endblock %}