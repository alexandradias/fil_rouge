{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="login_username">
        <div> <label  for="username">{{ 'Votre identifiant'|trans }}</label></div>
        <div><input  type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" /></div>
    </div>

    <hr class="hr">

    <div class="login_password">
        <div><label for="password">{{ 'Votre password'|trans }}</label></div>
        <div><input  type="password" id="password" name="_password" required="required" autocomplete="current-password" /></div>
    </div>

    <hr class="hr">

    <div class="login_checkbox">
        <div><label for="remember_me">{{ 'Se souvenir de moi'|trans }}</label></div>
        <div><input  type="checkbox" id="remember_me" name="_remember_me" value="on" /></div>
    </div>

    <hr class="hr">

    <div>
        <input class="login_submit" type="submit" id="_submit" name="_submit" value="{{ 'valid'|trans }}" />
    </div>

</form>
