{#la … extends me permets d'appeler le fichier partiel qui regroupe le 'header' et 'footer' présent sur toutes les pages de mon site#}
{% extends 'baseUser/base_products.html.twig' %}

    {# j'intègre le contenu de ma page entre le 'block' et le 'endblock'#}
    {% block content %}

        {#message flash / ce message ne s'affichera seulement en cas d'erreur#}
        {% if app.flashes %}
            <div class="modal">
                {#Je récupère les messages flash pour les afficher#}
                {% for messages in app.flashes %}
                    {% for message in messages %}
                        {{ message }}
                    {% endfor %}
                {% endfor %}
            </div>
        {% endif %}
        {#end message flash#}
    <section>
        <div class="content_contact">

                <div class="back_content_contact">

                    <h1 class="h1_contact">Contact</h1>
                </div>

                <hr class="hrTop_contact">
                <hr class="hrTop_contact">


                    {#-> la fonction twig 'form_start' démarre le formulaire#}
                    {{ form_start(formContactView)}}

                    {#-> je crée une class form qui me permets de styliser le formulaire de contact#}
                    <div class="form_contact">


                        {#-> la fonction twig 'form_label' permet de créer un label#}
                        {# -> la fonction twig 'form_widget' permet de créer un champ de formulaire#}


                        {{ form_label(formContactView.Nom, 'Nom', {'label_attr': {'class': 'form_content_label'}}) }}
                        {{ form_widget(formContactView.Nom, { 'attr': {'class': "form_content",'placeholder': "Votre nom"} }) }}


                        <hr class="hrInsert_contact">

                        {{ form_label(formContactView.Prenom, 'Prénom', {'label_attr': {'class': 'form_content_label'}}) }}
                        {{ form_widget(formContactView.Prenom, { 'attr': {'class': "form_content",'placeholder': "Votre prénom"} }) }}


                        <hr class="hrInsert_contact">

                        {{ form_label(formContactView.Email, 'Email', {'label_attr': {'class': 'form_content_label'}}) }}
                        {{ form_widget(formContactView.Email, { 'attr': {'class': "form_content",'placeholder': "Votre email"} }) }}


                        <hr class="hrInsert_contact">

                        {{ form_label(formContactView.Message, 'Message', {'label_attr': {'class': 'form_content_label'}}) }}
                        {{ form_widget(formContactView.Message, { 'attr': {'class': "form_content",'placeholder': "Votre message"} }) }}


                        <hr class="hrInsert_contact">

                        {{ form_widget(formContactView.envoyer, { 'attr': {'class': "form_content_submit"} }) }}

                    </div>

                    {{ form_end(formContactView)}}

        </div>
    </section>


    {% endblock %}