     {% block content %}


          <section>
               <div class="slide_products" >

                    <div class="text_products">
                         <div class="bloc_text_products">
                              {{categorie}}
                         </div>
                    </div>
                    <div>

                         {% if categorie=="patisseries"%}
                              <img src="{{ asset('assets/img/slide_patisserie.jpg') }}" alt="slide_patisseries_section"/>

                         {% elseif categorie=="chocolats" %}
                              <img src="{{ asset('assets/img/slide_chocolat.jpg') }}" alt="slide_chocolats_section"/>

                         {% elseif categorie=="buches" %}
                              <img src="{{ asset('assets/img/slide_buche.jpg') }}" alt="slide_buches_section"/>

                         {% endif %}

                       {#  {% switch categorie %}
                              {% case "patisseries" %}
